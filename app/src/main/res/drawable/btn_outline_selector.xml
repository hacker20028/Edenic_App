<!-- res/drawable/btn_outline_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="#80FFFFFF"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="#B3FFFFFF"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>